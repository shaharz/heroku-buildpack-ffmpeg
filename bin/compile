#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Install vips"
BUILD_DIR=$1
VENDOR_DIR="vendor"
DOWNLOAD_URL="pm-tiles-staging.s3-website-us-east-1.amazonaws.com/vips-heroku.tar.gz"

echo "DOWNLOAD_URL = " $DOWNLOAD_URL | indent

cd $BUILD_DIR
mkdir -p $VENDOR_DIR
cd $VENDOR_DIR
curl -L --silent $DOWNLOAD_URL | tar xz

echo "exporting PATH and LIBRARY_PATH" | indent
PROFILE_PATH="$BUILD_DIR/.profile.d/vips.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PKG_CONFIG_PATH="$PKG_CONFIG_PATH:vendor/vips/lib/pkgconfig"' >> $PROFILE_PATH
echo 'export LD_LIBRARY_PATH="$LD_LIBRARY_PATH:vendor/vips/lib"' >> $PROFILE_PATH
