#!/bin/sh

set -e

indent() {
  sed -u 's/^/       /'
}

echo "-----> Install vips"
BUILD_DIR=$1
CACHE_DIR=$2
DOWNLOAD_URL=http://pm-tiles-staging.s3-website-us-east-1.amazonaws.com/vips-heroku.tar.gz

echo "DOWNLOAD_URL = " $DOWNLOAD_URL | indent

cd $BUILD_DIR
mkdir vendor
cd vendor
curl -L $DOWNLOAD_URL | tar xz
ls /app/*